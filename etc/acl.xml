<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Beecom_BetterSlider::betterslider" title="Banner Slider" sortOrder="55">
                    <resource id="Beecom_BetterSlider::banner" title="Banners" sortOrder="10"/>
                    <resource id="Beecom_BetterSlider::slider" title="Sliders" sortOrder="20"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Beecom_BetterSlider::betterslider_config" title="Banner Slider"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
